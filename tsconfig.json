{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "api/routes", "api/app.ts", "api/errorHandler.ts", "api/index.ts"],
    "exclude": ["node_modules"],
    "ts-node": {
      "esm": true,
      "compiler": "typescript"
    },
  }